(deflisten mail-num
  :initial 0
  "scripts/mail")

(defwidget mail []
  (eventbox
   :class "mail"
   :onclick "emacs -f mu4e &"
   :cursor "pointer"
   (box
    :spacing 15
    :space-evenly false
    (label
     :class {mail-num > 0 ? "icon new": "icon"}     
     :text {mail-num > 0 ? "󰧬" : "󰇰"}
     )
    (label     
     :text {mail-num}
      )
    )
   )
  )
